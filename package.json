{
  "name": "@thalesrc/hermes",
  "version": "0.0.0",
  "description": "Javascript messaging library",
  "main": "index.js",
  "typings": "index.d.ts",
  "scripts": {
    "__test": "echo \"Error: no test specified\" && exit 0",
    "test": "jest",
    "npm:publish:configure": "replace '<EMAIL>' $NPM_EMAIL .npmrc && replace '<TOKEN>' $NPM_TOKEN .npmrc",
    "npm:publish:copy": "cpy 'LICENSE' 'README.md' '.npmrc' '.npmignore' 'package.json' dist",
    "npm:publish:pack": "cd dist && npm pack",
    "npm:publish:post": "npm publish ./dist/thalesrc-hermes-$TRAVIS_TAG.tgz",
    "npm:publish": "gtvu $TRAVIS_TAG && npm run npm:publish:configure && npm run npm:publish:copy && tsc && npm run npm:publish:pack && npm run npm:publish:post"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thalesrc/hermes.git"
  },
  "keywords": [
    "javascript",
    "messaging",
    "send",
    "message",
    "chrome",
    "extensions",
    "nodejs",
    "child",
    "process",
    "webworkers"
  ],
  "author": "alisahinozcelik@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thalesrc/hermes/issues"
  },
  "homepage": "https://github.com/thalesrc/hermes#readme",
  "dependencies": {
    "@thalesrc/js-utils": "^1.3.0",
    "rxjs": "^6.3.3"
  },
  "devDependencies": {
    "@gen-tech/version-update": "^0.1.2",
    "@types/chrome": "0.0.77",
    "@types/jest": "^24.0.23",
    "cpy-cli": "^2.0.0",
    "jest": "^24.9.0",
    "replace": "^1.0.1",
    "rxjs-marbles": "^5.0.3",
    "ts-jest": "^24.2.0",
    "typescript": "^3.2.4",
    "utility-types": "^3.4.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
